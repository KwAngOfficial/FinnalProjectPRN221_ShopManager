    <main>


        <div class="listing-area pt-50 pb-50">
            <div class="container">
                <div class="row">

                    <div class="col-xl-3 col-lg-4 col-md-4">

                        <div class="category-listing mb-50">

                            <div class="single-listing">

                                <div class=" pb-30">
                                    <div class=" mb-30">
                                        <div class="col-xl-12">
                                        </div>
                                    </div>
                                </div>


                                <div class="select-Categories pb-20">
                                    @foreach (Category cate in Model.categories)
                                    {
                                        <label class="container">
                                            <a style="color:black" href="/Products/List?CategoryId=@cate.CategoryId">@cate.CategoryName</a>
                                        </label>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-9 col-lg-8 col-md-8">
                        <div class="latest-items latest-items2">
                            <div class="row">
                                @foreach (Product item in Model.PagedProducts)
                                {
                                    <div class="col-xl-4 col-lg-6 col-md-6 col-sm-6">
                                        <div class="properties pb-30">
                                            <div class="properties-card">
                                                <div class="properties-img">
                                                    @if (item.ProductImages.Count > 0)
                                                    {
                                                        var productImage = item.ProductImages.FirstOrDefault();
                                                        <a href="pro-details.html"><img src="@productImage.ImageProduct" alt></a>
                                                    }
                                                    else
                                                    {
                                                        <a href="pro-details.html"><img src="/path/to/default/image.jpg" alt></a>
                                                    }
                                                    <div class="socal_icon">
                                                        <form method="post">
                                                            <input type="hidden" name="productId" value="@item.ProductId">
                                                            <button type="submit"><a><i class="ti-shopping-cart"></i></a></button>
                                                        </form>
                                                        <a href="javascript:void(0)" onclick="addToCart(@item.ProductId)"><i class="ti-shopping-cart"></i></a>
                                                        
                                                        <a href="/Home/AddCart"><i class="ti-heart"></i></a>
                                                        <a href="#"><i class="ti-zoom-in"></i></a>
                                                    </div>      
                                                </div>
                                                <div class="properties-caption properties-caption2">

                                                    <h3><a href="pro-details.html">@item.ProductName</a></h3>
                                                    <div class="properties-footer">
                                                        <div class="price">
                                                            <span>@item.Price<span>@(@item.Price + (@item.Price * 30 / 100))</span></span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <!-- Phân trang -->
                    @if (Model.PagedProducts.PageCount > 1)
                    {
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center">
                                @if (Model.PagedProducts.HasPreviousPage)
                                {
                                    <li class="page-item"><a class="page-link" href="/Products/List?pageNumber=@(Model.PagedProducts.PageNumber - 1)">Trang trước</a></li>
                                }

                                @for (int i = 1; i <= Model.PagedProducts.PageCount; i++)
                                {
                                    <li class="page-item @(i == Model.PagedProducts.PageNumber ? "active" : "")"><a class="page-link" href="/Products/List?pageNumber=@i">@i</a></li>
                                }

                                @if (Model.PagedProducts.HasNextPage)
                                {
                                    <li class="page-item"><a class="page-link" href="/Products/List?pageNumber=@(Model.PagedProducts.PageNumber + 1)">Trang sau</a></li>
                                }
                            </ul>
                        </nav>
                    }
                </div>
    </main>
